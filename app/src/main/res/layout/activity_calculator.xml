<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="C"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/signButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="+/-"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/percentButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="%"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/multiplyButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="x"
                android:textSize="@dimen/buttonFontSize" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/sevenButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="7"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/eightButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="8"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/nineButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="9"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/divideButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="divide symbol"
                android:textSize="@dimen/buttonFontSize" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/fourButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="4"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/fiveButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="5"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/sixButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="6"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="-"
                android:textSize="@dimen/buttonFontSize" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/oneButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="1"
                android:textSize="@dimen/buttonFontSize" />


            <Button
                android:id="@+id/twoButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="2"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/threeButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="3"
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="0"
                android:text="+"
                android:textSize="@dimen/buttonFontSize" />
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/zeroButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="2"
                android:text="0"
                android:textSize="@dimen/buttonFontSize" />


            <Button
                android:id="@+id/decimalButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:text="."
                android:textSize="@dimen/buttonFontSize" />

            <Button
                android:id="@+id/equalsButton"
                android:layout_width="@dimen/buttonWidthAndHeight"
                android:layout_height="@dimen/buttonWidthAndHeight"
                android:layout_margin="@dimen/buttonMargin"
                android:layout_weight="1"
                android:text="="
                android:textSize="@dimen/buttonFontSize" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>